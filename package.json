{
  "name": "svgomg",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server",
    "build": "npm run build:client && npm run build:server && npm run build:static",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/server/index.tsx --outDir dist/server",
    "build:static": "cross-env NODE_ENV=production node server --static",
    "preview": "cross-env BASE=/svgomg/ NODE_ENV=production node server"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@preact/signals": "^1.2.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "prettier": "^3.1.1",
    "sirv": "^2.0.4",
    "svgo": "^3.2.0",
    "typescript": "^5.3.3",
    "typescript-plugin-css-modules": "^5.0.2",
    "vite": "^5.0.10",
    "xo": "^0.56.0"
  },
  "xo": {
    "space": true
  }
}
